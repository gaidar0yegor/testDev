{% extends "base.html.twig" %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    
<style>        
    a:hover {text-decoration: none;  }
    .form-control col-sm-3 {position: absolute;}
    .img_logo {position: absolute; left: 4%; top: 8%; }
    .img_logo img {height: 50px; }
    .title {position: relative; left: -2%; }
    /* .title {display: flex; justify-content: space-around; } */
    .table thead th {background-color: #ce352c; color: white; }
    tr, td {background-color: #e6e6e6; }
    .btn-success {color: white; background-image: linear-gradient(to bottom, #729EBF 0%, #333A40 100%); border: none; }
    .chart {display: flex; justify-content: space-between; }
</style>


<div class="row  mb-3">
	<div class="col-md-10 mx-auto bordure">
        <h1>Analyse des projets de l'année         
            <select name="select" class=" col-sm-2" id="dropdownYear" style="font-size: 0.8em" onchange="getProjectReportFunc()"></select>
        </h1>
    </div>
</div>

<div class="button text-center mb-5">
    <a href={{ path ('temps_') }}><input type="button" class="btn btn-success" value="Mettre à jour votre feuille de temps"></a>
</div>

<div class="row">
    <div class="col-md-4">
        <h4 class="text-center">Nombre d'heures par projet</h4>
        <div id="columnchart_values" class="col-md-2" style="width: 100%; height: 400px; margin-top: 5%;"></div>
    </div>
    <div class="col-md-8">
        <h4 class="text-center">Statistiques de mes visibilités de projets</h4>
        <table class="table table-bordered mx-auto m-5"  style="max-width: 67.9%;">
            <thead>
                <tr class="table table-secondary">
                    <th scope="col">Intitulés</th>
                    <th scope="col" class="text-center">Données</th>
                    {# <th scope="col" class="text-center">Équipe</th> #}
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Projets visibles de l'année</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">- Dont visibles en contributeur</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">Projets visibles de type RDI de l'année</th>
                    <td class="text-center">50</td>
                </tr>
                <tr>
                    <th scope="row">- Dont visibles en contributeur</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">Temps total de contribution (h)</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">Temps total des contributeurs (h)</th>
                    <td class="text-center">3</td>
                </tr>
            </tbody>
        </table>   
    </div>
</div>

<div class="row m-3">
	<div class="col-md-10 mx-auto bordure">
        <h1>Analyse des projets depuis    
            <select name="select" class=" col-sm-2" id="dropdownYearBis" style="font-size: 0.8em" onchange="getProjectReportFunc()"></select>
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-md-4 bordure">
        <h4 class="text-center">Réalisation des projets </h4>
        <div id="piechart_3d" style="width: 140%; height: 400px; margin-right: 80%;"></div>    
    </div>
    <div class="col-md-8 bordure">
        <h4 class="text-center">Type de projets réalisés</h4>
        <div id="myDiv"  style="width: 100%; height: 400px; margin-right: 70%;"></div>
    </div>
</div>




{% endblock %}

{% block javascripts %}
<script src='https://cdn.plot.ly/plotly-latest.min.js'></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", {packages:["corechart"]});
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
        ['Statuts', 'Speakers (in pourcents)'],
        ['Projets en cours',85], ['Projets terminés', 15], ['Projets suspendus', 4],
        ]);
        var options = {
        is3D: true,
        //   legend: 'none',
        pieSliceText: 'label',
        slices: { 4: {offset: 0.9}, 12: {offset: 0.3}, 14: {offset: 0.4}, 15: {offset: 0.5},},
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
        chart.draw(data, options);
    }

    var x = ["2015","2015","2016","2016", "2017"]
    var y = ["1","O.5","3","10","23"]

    var data = [
        {
        histfunc: "RDI",
        y: y,
        x: x,
        type: "histogram",
        name: "Projets"
        },
        {
        histfunc: "Non RDI",
        y: y,
        x: x,
        type: "histogram",
        name: "Projets RDI"
        }
    ]

    Plotly.newPlot('myDiv', data)


    {# var x = ["P1, P2, P3, P4"]
    var y = ["300", "100", "150"]

    var data = [
        {
        histfunc: "Projet",
        y: y,
        x: x,
        type: "histogram",
        name: "RDI"
        },
    ]

    Plotly.newPlot('myDiv2', data) #}


    google.charts.load("current", {packages:['corechart']});
    google.charts.setOnLoadCallback(drawChart2);
    function drawChart2() {
      var data = google.visualization.arrayToDataTable([
        ["Element", "Density", { role: "style" } ],
        ["P1", 8.94, "#b87333"],
        ["P2", 10.49, "silver"],
        ["P3", 19.30, "gold"],
      ]);

      var view = new google.visualization.DataView(data);
      view.setColumns([0, 1,
                       { calc: "stringify",
                         sourceColumn: 1,
                         type: "string",
                         role: "annotation" },
                       2]);

      var options = {
        
        width: 300,
        height: 400,
        bar: {groupWidth: "95%"},
        legend: { position: "none" },
      };
      var chart = new google.visualization.ColumnChart(document.getElementById("columnchart_values"));
      chart.draw(view, options);
    }   



    $('#dropdownYear').each(function() {

        var year = (new Date()).getFullYear();
        var current = year;
        // year += 4;
        for (var i = 0; i < 5; i++) {
            if ((year+i) == current)
            $(this).append('<option selected value="' + (year - i) + '">' + (year - i) + '</option>');
            else
            $(this).append('<option value="' + (year - i) + '">' + (year - i) + '</option>');
        }
    })

    $('#dropdownYearBis').each(function() {

        var year = (new Date()).getFullYear();
        var current = year;
        // year += 4;
        for (var i = 0; i < 5; i++) {
            if ((year+i) == current)
            $(this).append('<option selected value="' + (year - i) + '">' + (year - i) + '</option>');
            else
            $(this).append('<option value="' + (year - i) + '">' + (year - i) + '</option>');
        }
    })
</script>
{% endblock %}
