{% extends 'base.html.twig' %}

{% block body %}

<h1>Mon tableau de bord</h1>

<div class="row">
    <div class="col-md-6">
        <div id="mes-temps-rappel" class="card rdi-card-icon text-center">
            <i class="fa fa-calendar-o" aria-hidden="true"></i>
            <div class="card-body">
                <div class="row">
                    <div class="col-9 offset-3 col-sm-12 offset-sm-0">
                        <h5 class="card-title">Saisie de mes temps de {{ 'now'|format_date(pattern='MMMM') }}</h5>

                        <div class="temps-messages">
                            <p>&nbsp;</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a
                    href="{{ path ('temps_') }}"
                >Mettre à jour votre feuille de temps</a>
            </div>
        </div>
    </div>
</div>

<div class="row my-4">
	<div class="col-md-10 mx-auto bordure">
        <h2>Analyse des projets de l'année
            <select name="select" id="dropdownYear" style="font-size: 0.8em"></select>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h4 class="text-center">Nombre d'heures par projet</h4>

        <div id="heures-par-projet">
        </div>
    </div>
    <div class="col-md-8">
        <h4 class="text-center">Statistiques de mes visibilités de projets</h4>
        <table class="table table-bordered mx-auto m-5"  style="max-width: 67.9%;">
            <thead>
                <tr>
                    <th scope="col">Intitulés</th>
                    <th scope="col" class="text-center">Données</th>
                    {# <th scope="col" class="text-center">Équipe</th> #}
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Projets visibles de l'année</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">- Dont visibles en contributeur</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">Projets visibles de type RDI de l'année</th>
                    <td class="text-center">50</td>
                </tr>
                <tr>
                    <th scope="row">- Dont visibles en contributeur</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">Temps total de contribution (h)</th>
                    <td class="text-center">3</td>
                </tr>
                <tr>
                    <th scope="row">Temps total des contributeurs (h)</th>
                    <td class="text-center">3</td>
                </tr>
            </tbody>
        </table>   
    </div>
</div>

<div class="row my-4">
	<div class="col-md-10 mx-auto bordure">
        <h2>Analyse des projets depuis
            <select name="select" class=" col-3" id="dropdownYearBis" style="font-size: 0.8em" onchange="getProjectReportFunc()"></select>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4 bordure">
        <h4 class="text-center">Réalisation des projets </h4>
        <div id="piechart_3d" style="width: 140%; height: 400px; margin-right: 80%;"></div>    
    </div>
    <div class="col-md-8 bordure">
        <h4 class="text-center">Type de projets réalisés</h4>
        <div id="myDiv"  style="width: 100%; height: 400px; margin-right: 70%;"></div>
    </div>
</div>




{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('dependences/c3.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('dependences/d3.v5.min.js') }}"></script>
    <script src="{{ asset('dependences/c3.min.js') }}"></script>
    <script src="{{ asset('js/dashboard/temps-saisis.js') }}"></script>
    <script src="{{ asset('js/dashboard/heures-par-projet.js') }}"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>

<script src='https://cdn.plot.ly/plotly-latest.min.js'></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", {packages:["corechart"]});
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
        ['Statuts', 'Speakers (in pourcents)'],
        ['Projets en cours',85], ['Projets terminés', 15], ['Projets suspendus', 4],
        ]);
        var options = {
        is3D: true,
        //   legend: 'none',
        pieSliceText: 'label',
        slices: { 4: {offset: 0.9}, 12: {offset: 0.3}, 14: {offset: 0.4}, 15: {offset: 0.5},},
        };

        var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
        chart.draw(data, options);
    }

    var x = ["2015","2015","2016","2016", "2017"]
    var y = ["1","O.5","3","10","23"]

    var data = [
        {
        histfunc: "RDI",
        y: y,
        x: x,
        type: "histogram",
        name: "Projets"
        },
        {
        histfunc: "Non RDI",
        y: y,
        x: x,
        type: "histogram",
        name: "Projets RDI"
        }
    ]

    Plotly.newPlot('myDiv', data)


    {# var x = ["P1, P2, P3, P4"]
    var y = ["300", "100", "150"]

    var data = [
        {
        histfunc: "Projet",
        y: y,
        x: x,
        type: "histogram",
        name: "RDI"
        },
    ]

    Plotly.newPlot('myDiv2', data) #}


    $('#dropdownYearBis').each(function() {

        var year = (new Date()).getFullYear();
        var current = year;
        // year += 4;
        for (var i = 0; i < 5; i++) {
            if ((year+i) == current)
            $(this).append('<option selected value="' + (year - i) + '">' + (year - i) + '</option>');
            else
            $(this).append('<option value="' + (year - i) + '">' + (year - i) + '</option>');
        }
    })
</script>
{% endblock %}
