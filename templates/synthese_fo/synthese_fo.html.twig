{% extends 'base.html.twig' %}

{% block body %}

<h1>Mon tableau de bord</h1>

<div class="row">
    <div class="col-md-6">
        <div id="mes-temps-rappel" class="card rdi-card-icon text-center">
            <i class="fa fa-calendar-o" aria-hidden="true"></i>
            <div class="card-body">
                <div class="row">
                    <div class="col-9 offset-3 col-sm-12 offset-sm-0">
                        <h5 class="card-title">Saisie de mes temps de {{ 'now'|format_date(pattern='MMMM') }}</h5>

                        <div class="temps-messages">
                            <p>&nbsp;</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a
                    href="{{ path ('temps_') }}"
                >Mettre à jour votre feuille de temps</a>
            </div>
        </div>
    </div>
</div>

<div class="row my-4">
	<div class="col-md-10 mx-auto bordure">
        <h2>Analyse des projets de l'année
            <select name="select" id="dropdownYear" style="font-size: 0.8em"></select>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h4 class="text-center">Nombre d'heures par projet</h4>

        <div id="heures-par-projet">
        </div>
    </div>
    <div class="offset-md-1 col-md-7">
        <h4 class="text-center">Mes contributions</h4>
        <table class="table text-center">
            <thead>
                <tr>
                    <th></th>
                    <th>Moi</th>
                    <th>Équipe</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="text-left">Projets</td>
                    <td class="moi-vs-equipe moi projet">…</td>
                    <td class="moi-vs-equipe equipe projet">…</td>
                </tr>
                <tr>
                    <td class="text-left">Projets de type RDI</td>
                    <td class="moi-vs-equipe moi projet-rdi">…</td>
                    <td class="moi-vs-equipe equipe projet-rdi">…</td>
                </tr>
                <tr>
                    <td class="text-left">Temps total de contribution</td>
                    <td class="moi-vs-equipe moi temps-total">…</td>
                    <td class="moi-vs-equipe equipe temps-total">…</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row my-4">
	<div class="col-md-10 mx-auto">
        <h2>Analyse des projets depuis
            <select name="select" id="dropdownSinceYear" style="font-size: 0.8em"></select>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h4 class="text-center">Réalisation des projets</h4>

        <div id="projets-statuts">
        </div>
    </div>
    <div class="col-md-8 bordure">
        <h4 class="text-center">Type de projets réalisés</h4>
        <div id="myDiv"  style="width: 100%; height: 400px; margin-right: 70%;"></div>
    </div>
</div>




{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('dependences/c3.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('dependences/d3.v5.min.js') }}"></script>
    <script src="{{ asset('dependences/c3.min.js') }}"></script>
    <script src="{{ asset('js/dashboard/utils.js') }}"></script>
    <script src="{{ asset('js/dashboard/temps-saisis.js') }}"></script>
    <script src="{{ asset('js/dashboard/heures-par-projet.js') }}"></script>
    <script src="{{ asset('js/dashboard/moi-vs-equipe.js') }}"></script>
    <script src="{{ asset('js/dashboard/projets-statuts.js') }}"></script>
    <script src="{{ asset('js/dashboard.js') }}"></script>

<script src='https://cdn.plot.ly/plotly-latest.min.js'></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

    var x = ["2015","2015","2016","2016", "2017"]
    var y = ["1","O.5","3","10","23"]

    var data = [
        {
        histfunc: "RDI",
        y: y,
        x: x,
        type: "histogram",
        name: "Projets"
        },
        {
        histfunc: "Non RDI",
        y: y,
        x: x,
        type: "histogram",
        name: "Projets RDI"
        }
    ]

    Plotly.newPlot('myDiv', data)
</script>
{% endblock %}
