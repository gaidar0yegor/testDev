{% extends 'register/layout.html.twig' %}

{% block register %}
    <h1 class="mb-1">Mon compte RDI-Manager</h1>

    <form method="post">
        <p class="text-center">
            <input type="hidden" name="csrf_token" value="{{ csrf_token('register_join_societe') }}" />
            <button
                type="submit"
                class="btn btn-lg btn-success"
            >Rejoindre la société <strong>{{ societe.raisonSociale }}</strong></button>
        </p>
    </form>
{% endblock %}
