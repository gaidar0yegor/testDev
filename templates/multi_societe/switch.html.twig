{% extends 'base.html.twig' %}

{% block body %}

<h1>{{ "my_companies"|trans }}</h1>

<div class="row row-flex row-cols-1 row-cols-md-2 row-cols-lg-3">
    {% for societeUser in app.user.societeUsers %}
        <div class="col-md-4 mb-4">
            <div data-societe-user-id="{{ societeUser.id }}" class="card h-100 {% if societeUser == app.user.currentSocieteUser %}border-success{% endif %} {% if not societeUser.enabled %}bg-light{% endif %}">
                <div class="card-body" style="border-top: 5px solid {{ societeUser.societe.colorCode }}">
                    <div class="notif-container d-flex flex-row justify-content-end align-items-start"></div>
                    <h5 class="card-title d-flex flex-row justify-content-between align-items-center">
                        <div>
                        {% if societeUser.societe.logo %}
                            {% include 'utils/_avatar.html.twig' with {societe: societeUser.societe, size: 50, border: true} %}
                        {% else %}
                            <i class="fa fa-building-o" aria-hidden="true"></i>
                        {% endif %}

                        {{ societeUser.societe.raisonSociale }}
                        </div>
                        <div class="text-right">
                            <small>
                                <strong>Offre {{ societeUser.societe.productKey|trans }} {% if hasTryLicense(societeUser.societe) %}({{ 'try_offer'|trans }}){% endif %}</strong>
                            </small>
                            {% if societeUser.isAdminFo %}
                            <br><small><i>
                                    {{ getLicenseExpirationDate(societeUser.societe) <= date() ? 'Expirée' : 'Expire' }}
                                    le {{ getLicenseExpirationDate(societeUser.societe)|format_date(pattern='d MMMM yyyy') }}</i></small>
                            {% endif %}
                        </div>
                    </h5>
                    <h6 class="card-subtitle text-muted">Mon rôle : <strong>{{ societeUser.role|trans }}</strong></h6>
                    <ul class="list-unstyled mb-0">
                        {% if societeUser.projetParticipants|length > 0 %}
                            <li><strong>{{ societeUser.projetParticipants|length }}</strong> projets</li>
                        {% endif %}
                        {% if not societeUser.enabled %}
                            {% for societeUserPeriod in societeUser.societeUserPeriods %}
                                {% if societeUserPeriod.dateEntry %}
                                    <li>{{ "societeUserPeriod.dateEntry"|trans }} : {{ societeUserPeriod.dateEntry|format_date }}</li>
                                {% endif %}
                                {% if societeUserPeriod.dateLeave %}
                                    <li>{{ "societeUserPeriod.dateLeave"|trans }} : {{ societeUserPeriod.dateLeave|format_date }}</li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </ul>
                    {% if societeUser.enabled %}
                        {% if societeUser == app.user.currentSocieteUser %}
                            <form action="{{ path('app_fo_multi_societe_switch_disconnect') }}" method="post">
                                <button type="submit" class="stretched-link mt-2 btn btn-outline-danger">{{ "logout"|trans }}</button>
                            </form>
                        {% else %}
                            <form action="{{ path('app_fo_multi_societe_switch_post', {'id': societeUser.id}) }}" method="post">
                                <button type="submit" class="stretched-link mt-2 btn btn-primary">{{ "goOn"|trans }} {{ societeUser.societe.raisonSociale }}</button>
                            </form>
                        {% endif %}
                    {% else %}
                        {% if not societeUser.enabled %}
                            <div class="d-flex flex-row justify-content-end align-items-center">
                                <span class="badge badge-secondary" title="L'accès à cette société vous a été désactivé par un administrateur.">
                                    {{ "access_disabled"|trans }}
                                </span>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="col-md-4 mb-4">
        <div class="card h-100 mes-societes-create">
            <div class="card-body text-center d-flex justify-content-center align-items-center">
                <a href="{{ path('app_register') }}" class="stretched-link lead">
                    <i class="fa fa-2x fa-building-o" aria-hidden="true"></i>
                    <br>
                    {{ "create_my_company"|trans }}
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
