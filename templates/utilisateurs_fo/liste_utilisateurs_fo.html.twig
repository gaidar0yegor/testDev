{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<style>
    .table thead th {background-color: #ce352c; color: white; }
    tr, td {background-color: #e6e6e6; }
</style>

<h1 class="text-center m-4" style="color: #ce352c;">Liste des utilisateurs</h1>

<table class="table text-center mx-auto"  style="max-width: 80%;">
    <thead>
        <tr class="table">
            <th class="text-center">Nom</th>
            <th class="text-center">Prénom</th>
            <th class="text-center d-none d-md-table-cell">Email</th>
            <th class="text-center">Nb projets</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td class="text-center">{{ user.nom }}</td>
                <td class="text-center">{{ user.prenom }}</td>
                <td class="text-center d-none d-md-table-cell">{{ user.email }}</td>
                <td class="text-center">{{ user.projetParticipants|length }}</td>
                <td class="flex justify-content-around">
                    <a href="{{ path('users_fo_user', { 'id': user.id }) }}">
                        <i class="fa fa-lg fa-eye"></i>
                    </a>
                    <a href="{{ path('utilisateur_fo_modifier_', { 'id': user.id }) }}">
                        <i class="fa fa-lg fa-edit"></i>
                    </a>
                    <a href="{{ path('utilisateur_fo_supprimer_', { 'id': user.id }) }}">
                        <i class="fa fa-lg fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}











