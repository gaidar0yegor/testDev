{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs |
	{{ parent() }}
{% endblock %}

{% block body %}
	<h1>Liste des utilisateurs</h1>

	<table class="table text-center">
		<thead>
			<tr>
				<th style="text-align: start;">N°</th>
				<th style="text-align: start;">NOM</th>
				<th class=" d-none d-md-table-cell">Prénom</th>
				<th class="d-none d-md-table-cell">Email</th>
				<th>Rôle</th>
				<th>Statut</th>
				<th>Nb projets</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% set numero = 1 %}
			{% for user in users %}
				<tr class="{{ user.enabled ? '' : 'text-muted' }}">
					<td style="text-align: start;">
						{{ numero }}</td>
					{# <td style="text-align: start;">{{ user.id }}</td> #}
					<td style="text-align: start;">{{ user.nom }}</td>
					<td class=" d-none d-md-table-cell">{{ user.prenom }}</td>
					<td class=" d-none d-md-table-cell">{{ user.email }}</td>
					<td>{{ user.role|trans }}</td>
					{% if user.enabled %}
						<td>Actif</td>
					{% else %}
						<td>Inactif</td>
					{% endif %}
					<td>{{ user.projetParticipants|length }}</td>
					<td class="d-flex justify-content-around">
						<a href="{{ path('users_fo_user', { 'id': user.id }) }}">
							<i class="fa fa-lg fa-eye"></i>
						</a>
						<a href="{{ path('utilisateur_fo_modifier_', { 'id': user.id }) }}">
							<i class="fa fa-lg fa-edit"></i>
						</a>
					</td>
				</tr>
				{% set numero = numero + 1 %}
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('fo_user_invite') }}" class="btn btn-outline-primary">
		<i class="fa fa-user-plus" aria-hidden="true"></i>
		Inviter un nouvel utilisateur
	</a>

{% endblock %}
