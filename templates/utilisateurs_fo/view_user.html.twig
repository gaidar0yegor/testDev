{% extends 'base.html.twig' %}

{% block title %}Compte de {{ user.fullname }} | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Compte de {{ user.fullname }}</h1>

    <div class="row">
        <div class="col-sm-10 mx-auto offset-sm-1 col-lg-8 offset-lg-2">
            <div class="card bg-light-grey border-light">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Nom : </strong></div>
                        <div class="col-md-9">{{ user.nom }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Prénom : </strong></div>
                        <div class="col-md-9">{{ user.prenom }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Rôle : </strong></div>
                        <div class="col-md-9">{{ user.role|trans }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>E-mail : </strong></div>
                        <div class="col-md-9">{{ user.email }}</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Téléphone : </strong></div>
                        <div class="col-md-9">
                            {% if user.telephone %}
                                {{ user.telephone|phone_number_format('NATIONAL') }}
                            {% else %}
                                <i>Non renseigné</i>
                            {% endif %}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Statut : </strong></div>
                        <div class="col-md-9">
                            {% if user.enabled %}
                                <span class="badge badge-success">Activé</span>
                            {% else %}
                                <span class="badge badge-warning">Désactivé</span>
                            {% endif %}
                        </div>
                    </div>

                    <div class="d-flex flex-column flex-md-row justify-content-md-between mt-5">
                        <a href="{{ path('app_fo_admin_utilisateur_modifier', { id: user.id }) }}" class="btn btn-outline-success mt-2">Mettre à jour</a>
                        {% if user.enabled %}
                            <form
                                action="{{ path('utilisateur_fo_disable', { id: user.id }) }}"
                                method="POST"
                                class="form"
                            >
                            <input type="submit" value="Désactiver" class="btn btn-outline-warning mt-2" style="width: 100%;"/>
                            </form>
                        {% else %}

                            <form
                                action="{{ path('utilisateur_fo_enable', { id: user.id }) }}"
                                method="POST"
                                class="form"
                            >
                                <input type="submit" value="Ré-activer" class="btn btn-warning mt-2" />
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
