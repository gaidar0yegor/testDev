{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_user_user'|trans({'%user%': societeUser.user.fullname}) }} | {{ parent() }}{% endblock %}

{% block body %}

<h1>{{ 'edit_user_user'|trans({'%user%': societeUser.user.fullname}) }}</h1>

{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.role) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.heuresParJours) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.dateEntree) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.dateSortie) }}
    </div>
</div>

<div class="d-flex justify-content-around">
    <div class="form-group mt-5">
        <a href="{{ path('app_fo_admin_utilisateurs') }}" class="btn btn-outline-warning">{{ 'cancel'|trans }}</a>
    </div>
    <div class="form-group mt-5">
        <button type="submit" class="btn btn-success">{{ 'update'|trans }}</button>
    </div>
</div>
{{ form_end(form) }}

<div class="row">
    <div class="col-md-6">
        <div class="card border-danger my-4">
            <div class="card-body text-danger">
                {% if societeUser.enabled %}
                    <h5 class="card-title">{{ 'disable_account'|trans }}</h5>
                    <p class="card-text">
                        {{ 'disable_account_explain'|trans({'%user%': societeUser.user.fullname}) }}
                    </p>
                    <form
                        action="{{ path('utilisateur_fo_disable', { id: societeUser.id }) }}"
                        method="POST"
                        class="form"
                    >
                        <input type="submit" value="{{ 'disable_account'|trans }}" class="btn btn-outline-warning" />
                    </form>
                {% else %}
                    <h5 class="card-title">{{ 're_enable_account'|trans }}</h5>
                    <p class="card-text">
                        {{ 're_enable_account_explain'|trans({'%user%': societeUser.user.fullname}) }}
                    </p>
                    <form
                        action="{{ path('utilisateur_fo_enable', { id: societeUser.id }) }}"
                        method="POST"
                        class="form"
                    >
                        <input type="submit" value="{{ 're_enable_account'|trans }}" class="btn btn-warning" />
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
