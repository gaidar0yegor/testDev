{% extends 'base.html.twig' %}

{% block title %}{{ 'edit_user_user'|trans({'%user%': societeUser.user.fullname}) }} | {{ parent() }}{% endblock %}

{% block body %}

<h1>{{ 'edit_user_user'|trans({'%user%': societeUser.user.fullname}) }}</h1>

{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-sm-6">
        {{ form_row(form.role) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.heuresParJours) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.dateEntree) }}
    </div>
    <div class="col-sm-6">
        {{ form_row(form.dateSortie) }}
    </div>
</div>

<div class="d-flex justify-content-around">
    <div class="form-group mt-5">
        <a href="{{ path('app_fo_admin_utilisateurs') }}" class="btn btn-outline-warning">{{ 'cancel'|trans }}</a>
    </div>
    <div class="form-group mt-5">
        <button type="submit" class="btn btn-success">{{ 'update'|trans }}</button>
    </div>
</div>
{{ form_end(form) }}

<div class="row">
    <div class="col-md-6">
        <div class="card border-danger my-4">
            <div class="card-body text-danger">
                {% if societeUser.enabled %}
                    <h5 class="card-title">{{ 'disable_account'|trans }}</h5>
                    <p class="card-text">
                        {{ 'disable_account_explain'|trans({'%user%': societeUser.user.fullname}) }}
                    </p>
                    {% if projetsAsCdp | length > 0 %}
                        <hr>
                        <p class="card-text">
                            {{ 'disable_account_with_CDP_roles_explain'|trans({'%user%': societeUser.user.fullname}) }}
                        </p>
                        <ul>
                            {% for projetParticipant in projetsAsCdp %}
                                <li>
                                    <a href="{{ path('app_fo_projet', {'id': projetParticipant.projet.id}) }}">{{ projetParticipant.projet.titre }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    <form
                        action="{{ path('utilisateur_fo_disable', { id: societeUser.id }) }}"
                        method="POST"
                        class="form"
                    >
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('disable_user_' ~ societeUser.id) }}" />
                        <input
                            type="submit"
                            value="{{ 'disable_account'|trans }}"
                            class="btn btn-outline-warning"
                            {% if userContext.societeUser == societeUser %}
                                disabled
                                title="{{ 'cannot_disable_self'|trans }}"
                            {% elseif projetsAsCdp | length > 0 %}
                                disabled
                                title="{{ 'cannot_disable_cdp'|trans }}"
                            {% endif %}
                        />
                    </form>
                {% else %}
                    <h5 class="card-title">{{ 're_enable_account'|trans }}</h5>
                    <p class="card-text">
                        {{ 're_enable_account_explain'|trans({'%user%': societeUser.user.fullname}) }}
                    </p>
                    <form
                        action="{{ path('utilisateur_fo_enable', { id: societeUser.id }) }}"
                        method="POST"
                        class="form d-inline-block"
                    >
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('re_enable_user_' ~ societeUser.id) }}" />
                        <input type="submit" value="{{ 're_enable_account'|trans }}" class="btn btn-warning" />
                    </form>
                    <a
                            href="{{ path('utilisateur_fo_delete', {'id': societeUser.id}) }}"
                            class="btn btn-danger"
                    >{{ 'verify_and_delete_user'|trans }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
