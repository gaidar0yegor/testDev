{% extends 'base_html.html.twig' %}

{% block base_body %}
    {% include('_menu_horizontal.html.twig') %}
    {% include '_sidebar_projects.html.twig' %}

    <div class="container main-container">
        {% include '_onboarding.html.twig' %}
        {% include '_flash_messages.html.twig' %}

        {% block body %}
        {% endblock %}

        {% if userContext.hasSocieteUser %}
            {% include '_alerts.html.twig' %}
        {% endif %}
    </div>

    {% include('_footer.html.twig') %}

    <div
        id="user-context-ids"
        {% if userContext.hasUser %}
            data-user-id="{{ userContext.user.id }}"
        {% endif %}
        {% if userContext.hasSocieteUser %}
            data-societe-user-id="{{ userContext.societeUser.id }}"
        {% endif %}
    ></div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
