{% extends 'base.html.twig' %}

{% block title %}Ajouter un fait marquant{% endblock %}

{% block body %}


<div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1>Ajouter un fait marquant</h1>

        <h2 class="text-center">Projet {{ projet.acronyme }}</h2>

        <a class="d-block mb-4" href="{{ path('app_fo_projet', {id: projet.id}) }}">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            Annuler et retourner au projet
        </a>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.titre) }}

        {{ form_row(form.description) }}
        <p class="text-muted" id="counterBlock"></p>
        {{ form_row(form.fichierProjets) }}
        <div class="text-center mt-5">
            <button class="btn btn-success">
                {{ button_label|default('Sauvegarder') }}
            </button>
        </div>

        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
