{% apply inky_to_html|inline_css(source('@public' ~ asset('build/foundation.css'))) %}
<wrapper>
    <container>
        <row>
            <columns>
                <spacer size="8"></spacer>
                <h1 class="text-center">Invitation sur RDI-Manager</h1>
            </columns>
        </row>
        <row>
            <columns>
                <p>
                    <strong>{{ fromUser.fullname }}</strong> vous invite sur RDI-Manager
                    dans la société <strong>{{ invitedUser.societe.raisonSociale }}</strong>
                    en tant que <strong>{{ invitedUser.role|trans }}</strong>.
                </p>
                <p>
                    Finalisez votre inscription en cliquant sur ce bouton :
                    <button href="{{ invitationLink }}" class="large expanded">Finaliser mon inscription</button>
                </p>
            </columns>
        </row>
       {% include('mail/layouts/_footer.html.twig') %}
    </container>
</wrapper>
{% endapply %}
