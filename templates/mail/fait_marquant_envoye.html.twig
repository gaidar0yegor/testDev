{% extends 'mail/layouts/base_mail.html.twig' %}

{% block title %}
    {{ faitMarquant.createdBy.user.shortname }} vous a envoyé un fait marquant ajouté sur le projet {{ faitMarquant.projet.acronyme }}
{% endblock %}
{% block body %}
    <row>
        <columns>
            <p>
                {{ faitMarquant.createdBy.user.shortname }}
                vous a envoyé un fait marquant ajouté sur le projet <strong>{{ faitMarquant.projet.acronyme }}</strong>
            </p>

            <spacer size="8"></spacer>

            <h3>{{ faitMarquant.titre }}</h3>

            <p>
                <small>
                    Ajouté le <strong>{{ faitMarquant.date|format_date }}</strong>
                    par <strong>{{ faitMarquant.createdBy.user.fullname }}</strong>.
                </small>

                <br />

                {{ faitMarquant.description|nl2br }}

                <br />

                <small>
                    {% if receiver.invitationToken is not null %}
                        {% if faitMarquant.fichierProjets | length > 0 %}<cite>Ce fait marquant contient des fichiers joints.</cite><br>{% endif %}
                        Pour plus de détails, veillez accepter l'invitation de RDI-Manager.
                    {% else %}
                        <a href="{{ url('app_fo_projet', {id: faitMarquant.projet.id, '_fragment': 'fait-marquant-' ~ faitMarquant.id}) }}">Voir sur RDI-Manager</a>.
                    {% endif %}
                </small>
            </p>

        </columns>
    </row>
{% endblock %}
