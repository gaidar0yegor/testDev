{% extends 'corp_app/mail/layouts/base_mail.html.twig' %}

{% block title %}
    {{ evenement.createdBy.user.fullname }} vous a invité à un évènement
    {% if evenement.projet %}
        sur le projet {{ evenement.projet.acronyme }}
    {% endif %}
{% endblock %}
{% block body %}
    <row>
        <columns>
            <p>
                Un nouveau évènement a été créé par <strong>{{ evenement.createdBy.user.fullname }}</strong>
                {% if evenement.projet %}
                sur le projet <strong>{{ evenement.projet.acronyme }}</strong>
                {% endif %}
            </p>

            <spacer size="8"></spacer>

            <h3>{{ evenement.text }}</h3>

            <p>
                {{ evenement.description|raw }}
            </p>
            <br>
            <h4>Les invités</h4>
            <ul>
                {% for evenementParticipant in evenement.evenementParticipants %}
                    <li>{{ evenementParticipant.societeUser.user.fullname }}</li>
                {% endfor %}
            </ul>

            <spacer size="8"></spacer>

            <small>
                <a href="{{ url('app_fo_current_user_events', {
                    'event' : evenement.id,
                }) }}">
                    Cliquez-ici afin de consulter en détails l'évènement directement sur l'application RDI Manager.
                </a>
            </small>
        </columns>
    </row>
{% endblock %}
