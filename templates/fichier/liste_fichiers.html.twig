{% extends 'base.html.twig' %}

{% block title %}Liste des fichiers | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Liste des fichiers</h1>

    <a class="d-block mb-4" href="{{ path('app_fo_projet', {id: projet.id}) }}">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
        Retourner au projet
    </a>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.fichierProjets) }}

    {% if is_granted(constant('App\\ProjetResourceInterface::CREATE'), projet) %}
        <div class="text-center mt-5">
            <button class="btn btn-success">
                {{ button_label|default('Sauvegarder') }}
            </button>
        </div>
    {% endif %}

    {{ form_end(form) }}
{% endblock %}
