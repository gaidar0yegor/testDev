{% extends 'base.html.twig' %}

{% block title %}Saisie de temps passé{% endblock %}

{% block body %}

<h1>Saisie de temps passé</h1>

<h2>
    <a href="{{ path('temps_', {'year': prev|date('Y'), 'month': prev|date('m')}) }}">
        <img src="https://img.icons8.com/android/24/000000/arrow-pointing-left.png"/>
    </a>
    {{ mois|format_date(pattern='MMMM Y')|capitalize }}
    <a href="{{ path('temps_', {'year': next|date('Y'), 'month': next|date('m')}) }}">
        <img src="https://img.icons8.com/android/24/000000/arrow.png"/>
    </a>
</h2>

{{ form(form) }}

{% endblock %}
