{% extends 'base.html.twig' %}

{% block body %}

    {% include('utils/_btn_html_to_pdf.html.twig') %}

    <div id="containerHtmlToPdf">

        <h1>{{ 'my_dashboard'|trans }}</h1>

        <h2 class="not-printable">{{ 'dashboard.today'|trans }}</h2>

        <div class="row not-printable">
            <div class="col-lg-12">
                <div id="mes-temps-rappel" data-url-temps-passes="{{ path('app_fo_temps') }}"></div>
            </div>
            <div class="col-lg-12">
                <div id="recents-projets" class="carousel-wrapper" data-url-projet="{{ path('app_fo_projet', {'id': 0}) }}">
                </div>
            </div>
        </div>

        <div class="row my-4">
            <div class="col-md-10 mx-auto bordure">
                <h2>{{ 'projects_analyse_of_year'|trans }}
                    <span
                        class="year-switch"
                        data-event-name="loadYearlyCharts"
                    ></span>
                </h2>
            </div>
        </div>

        <div class="row d-flex flex-row justify-content-around align-items-start">
            <div class="col-md-5">
                <h4 class="text-center">{{ 'hours_by_project'|trans }}</h4>

                <div id="heures-par-projet"></div>
            </div>
            {% if productPrivilegeCheker(constant('App\\SocieteProduct\\Product\\ProductPrivileges::PLANIFICATION_PROJET_AVANCE')) %}
                <div id="projets-efficacite-moyenne" class="col-md-4">
                    <h4 class="text-center">{{ 'efficiency'|trans }}</h4>
                    <canvas id="efficacite-moyenne" class="pl-lg-5 pm-lg-5 pt-lg-3 pt-lg-3"></canvas>
                </div>
            {% endif %}
            <div class="col-md-3">
                <h4 class="text-center">{{ 'my_contributions'|trans }}</h4>
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th></th>
                            <th>{{ 'my_contributions.me'|trans }}</th>
                            <th>{{ 'my_contributions.team'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-left">{{ 'my_contributions.projects'|trans }}</td>
                            <th class="moi-vs-equipe moi projet">…</th>
                            <th class="moi-vs-equipe equipe projet">…</th>
                        </tr>
                        <tr>
                            <td class="text-left">{{ 'my_contributions.rdi_projects'|trans }}</td>
                            <th class="moi-vs-equipe moi projet-rdi">…</th>
                            <th class="moi-vs-equipe equipe projet-rdi">…</th>
                        </tr>
                        <tr>
                            <td class="text-left">{{ 'my_contributions.total'|trans }}</td>
                            <th class="moi-vs-equipe moi temps-total">…</th>
                            <th class="moi-vs-equipe equipe temps-total">…</th>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row my-4">
            <div class="col-md-10 mx-auto">
                <h2>{{ 'project_analyse_from'|trans }}
                    <span
                        class="year-switch"
                        data-event-name="loadSinceYearCharts"
                        data-year-selected="{{ '-2 years'|date('Y') }}"
                    ></span>
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <h4 class="text-center">{{ 'projects_realisations'|trans }}</h4>

                <div id="projets-statuts">
                </div>
            </div>
            <div class="col-md-7">
                <h4 class="text-center">{{ 'realized_projects_type'|trans }}</h4>

                <div id="projets-rdi-vs-non-rdi">
                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dashboard') }}
{% endblock %}
