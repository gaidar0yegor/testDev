{% extends 'corp_app/base.html.twig' %}

{% block title %}Recommander {{ parent() }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>Recommander RDI-Manager</h1>

        <p>Vous pouvez envoyer un email contenant tous les accès à la démo de RDI-Manager.</p>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_widget(form) }}

        <p>Votre destinataire recevra le message suivant :</p>

        <div class="card">
            <div class="card-body">
                <p class="custom-text-preview" style="display: none">
                </p>

                {% include 'corp_app/mail/_recommandation-content.html.twig' %}
            </div>
        </div>

        <button type="submit" class="btn btn-success mt-3 d-block mx-auto">
            <i class="fa fa-paper-plane" aria-hidden="true"></i>
            Envoyer
        </button>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
