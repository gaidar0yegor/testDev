{% extends 'base.html.twig' %}

{% block title %}{{ 'password_reset'|trans }} | {{ parent() }}{% endblock %}

{% block body %}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>{{ 'password_reset'|trans }}</h1>

        <p>
            {{ 'welcome_user_you_can_reset_password'|trans({'user': user.fullname}) }}
        </p>

        <h2>{{ 'your_new_password'|trans }}</h2>

        {{ form(form) }}
    </div>
</div>

{% endblock %}
