{% extends "base_html.html.twig" %}

{% block title %}Mes plateformes | {{ parent() }}{% endblock %}

{% block base_body %}

    <section class="container switch-plateforms-container">
        <div class="row">
            <div class="col-12">
                <h1 class="page-title text-center">{{ 'welcom_to_rdi_manager_plateforms'|trans|raw|striptags('<span>')|raw }}</h1>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body d-flex flex-column justify-content-between align-items-center" style="border-top: 5px solid #ce352c">
                        <h4 class="card-title">
                            {{ 'corp_app_name'|trans }}
                        </h4>
                        <ul class="list-unstyled mb-0">
                            {% if app.user.enabledSocieteUsers|length > 0 %}
                                <li><strong>{{ app.user.enabledSocieteUsers|length }}</strong> société(s)</li>
                            {% endif %}
                        </ul>
                        <a class="stretched-link mt-2 btn btn-primary" href="{{ path('corp_app_fo_multi_societe_switch') }}">{{ 'access_to_my_companies'|trans }}</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body d-flex flex-column justify-content-between align-items-center" style="border-top: 5px solid #416C94">
                        <h4 class="card-title">
                            {{ 'lab_app_name'|trans }}
                        </h4>
                        <ul class="list-unstyled mb-0">
                            {% if app.user.userBooks|length > 0 %}
                                <li><strong>{{ app.user.userBooks|length }}</strong> cahier(s) de laboratoire</li>
                            {% endif %}
                        </ul>
                        <a class="stretched-link mt-2 btn btn-primary" href="{{ path('lab_app_fo_multi_user_book_switch') }}">{{ 'access_to_my_labo_notebook'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="page-background"></div>

    {% include('_footer.html.twig') %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
   {{ encore_entry_link_tags('switch-plateforms') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('switch-plateforms') }}
{% endblock %}

