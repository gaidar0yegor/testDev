{% extends 'bo/base.html.twig' %}

{% block body %}

<h1>Société {{ societe.raisonSociale }}</h1>

<a class="d-block mb-4" href="{{ path('app_bo_societes') }}">
    <i class="fa fa-chevron-left" aria-hidden="true"></i>
    Retourner à la liste des sociétés
</a>

<h3>Administrateurs</h3>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Statut</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for admin in societe.admins %}
            <tr>
                <td>{{ admin.fullname }}</td>
                <td>{{ admin.email }}</td>
                <td>
                    {% if admin.invitationToken %}
                        En attente de finalisation d'inscription
                        <small class="d-block">
                            Url d'invitation :
                            <strong class="d-block"><code>{{ url('app_fo_user_finalize_inscription', {'token': admin.invitationToken}) }}</code></strong>
                        </small>
                    {% else %}
                        Actif
                    {% endif %}
                </td>
                <td>
                    {% if admin.invitationToken %}
                        <form
                            method="post"
                            action="{{ path('app_bo_societe_invite', {'societeId': societe.id, 'userId': admin.id}) }}"
                            onsubmit="return confirm('Envoyer un email d\'invitation à cet administrateur ?');"
                        >
                            <button type="submit" class="btn btn-sm btn-info">Envoyer un email d'invitation</button>
                            <input type="hidden" name="token" value="{{ csrf_token('send-invitation-admin') }}"/>
                        </form>

                        <small><i>
                            {% if admin.invitationSentAt %}
                                Dernière invitation envoyée le <b>{{ admin.invitationSentAt|format_datetime }}</b>.
                            {% else %}
                                Invitation pas encore envoyée.
                            {% endif %}
                        </i></small>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-lg-8">
        <div class="input-group">
            {{ form_widget(form.email, {
                'attr': {
                    'placeholder': 'Email de l\'administrateur'
                }
            }) }}
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                    Inviter
                    <span class="d-none d-sm-inline">un autre administrateur</span>
                </button>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}

{% endblock %}
