{% extends 'lab_app/base.html.twig' %}

{% block title %}{{ 'labo.edit_labo'|trans }} | {{ parent() }}{% endblock %}

{% block body %}
    <h1>{{ 'labo.edit_labo'|trans }}</h1>

    <a href="{{ path('lab_app_fo_admin_lab_show') }}" class="d-block mb-4">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
        {{ 'back'|trans }}
    </a>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.name) }}
        </div>
    </div>

    <button type="submit" class="btn btn-success">{{ 'update'|trans }}</button>

    {{ form_end(form) }}
{% endblock %}
