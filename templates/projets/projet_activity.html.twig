{% extends "base.html.twig" %}

{% block title %}{{ "activity_project"|trans }} {{ projet.titre }} | {{ parent() }}{% endblock %}

{% block body %}

<h1>{{ "projectString"|trans }} {{ projet.acronyme }}</h1>

    <div class="d-flex justify-content-between align-items-center">
        <a class="d-block mb-4" href="{{ path('app_fo_projet', {id: projet.id}) }}">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            {{ 'go_on_project'|trans }}
        </a>

        {% include 'projets/_projet_actions_shortcut.html.twig' with {projet: projet} %}
    </div>

    <div class="d-flex flex-row justify-content-end align-items-center">
        {% if is_granted(constant('App\\Security\\Role\\RoleSociete::ADMIN')) %}
            {% if edit is defined %}
                <a href="{{ path('app_fo_projet_activity', {'id' : projet.id}) }}" class="btn btn-success" type="submit">{{ 'finish'|trans }}</a>
            {% else %}
                <a href="{{ path('app_fo_projet_activity_edit', {'id' : projet.id}) }}" class="btn btn-warning" type="submit">{{ 'update'|trans }}</a>
            {% endif %}
        {% endif %}
    </div>

{% include '_activity-list.html.twig' with {'activities': activities} %}

{% endblock %}
