{% extends "base.html.twig" %}

{% block title %}Activité du projet {{ projet.titre }} | {{ parent() }}{% endblock %}

{% block body %}

<h1>Projet {{ projet.acronyme }}</h1>

    <div class="d-flex flex-row justify-content-between align-items-center">
        <a class="d-block mb-4" href="{{ path('app_fo_projet', {'id': projet.id}) }}">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            Retourner au projet
        </a>

        {% if is_granted(constant('App\\Security\\Role\\RoleSociete::ADMIN')) %}
            {% if edit is defined %}
                <a href="{{ path('app_fo_projet_activity', {'id' : projet.id}) }}" class="btn btn-success" type="submit">Terminer</a>
            {% else %}
                <a href="{{ path('app_fo_projet_activity_edit', {'id' : projet.id}) }}" class="btn btn-warning" type="submit">Mettre à jour</a>
            {% endif %}
        {% endif %}
    </div>

{% include '_activity-list.html.twig' %}

{% endblock %}
