<dl>
    <p>Je suis <strong>observateur externe</strong> sur ce projet.</p>
    {% if projet.dateDebut %}
        <dt>Date de d√©but</dt>
        <dd>{{ projet.dateDebut|format_date }}</dd>
    {% endif %}
    {% if projet.dateFin %}
        <dt>Date de fin</dt>
        <dd>{{ projet.dateFin|format_date }}</dd>
    {% endif %}
    <dt>Statut</dt>
    <dd>{{ projet.statut }}</dd>
</dl>

<hr>

<h4>Contributeurs ({{ contributeurs|length }})</h4>

<ul class="list-unstyled">
    {% for contributeur in contributeurs %}
        <li>
            {{ contributeur.societeUser.user.fullname }}
        </li>
    {% else %}
        <li>Il n'y a pas de contributeur pour l'instant.</li>
    {% endfor %}
</ul>

{% if projet.fichierProjets|length > 0 %}
    <hr>

    <h4>Fichiers</h4>

    <ul class="list-unstyled">
        {% for fichierProjet in projet.fichierProjets %}
            <li>
                <a href="{{ path('app_fo_observateur_externe_view_file', {'projetId': projet.id, 'fichierProjetId': fichierProjet.id}) }}">
                    <i class="fa {{ fichierProjet|faFileIcon }}" aria-hidden="true"></i>
                    {{ fichierProjet.fichier.nomFichier }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endif %}
