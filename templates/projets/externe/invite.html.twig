{% extends 'base.html.twig' %}

{% block title %}{{ "invite_obs_ext"|trans }} {{ projet.acronyme }} | {{ parent() }}{% endblock %}

{% block body %}

<h1>{{ "invite_obs_ext"|trans }}</h1>

<h2>{{ "your_project"|trans }} {{ projet.acronyme }}</h2>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <p>{{ 'para_invite_obs'|trans({
                'projectAcronyme': projet.acronyme
            })|raw|striptags('<strong>')|raw }}</p>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        {{ form_row(form.invitationEmail) }}
        {{ form_row(form.invitationTelephone) }}

        <button
            class="btn btn-success"
            type="submit"
        >{{ "invite_obs_ext_2"|trans }}</button>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
