{% extends 'base.html.twig' %}

{% block title %}{{ 'join-project'|trans }} {{ projetObservateurExterne.projet.acronyme }} | {{ parent() }}{% endblock %}

{% block body %}

<h1>{{ 'join-project'|trans }} {{ projetObservateurExterne.projet.acronyme }}</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <p>{{ "para-join-rdi"|trans }}</p>

        <p>{{ "new-on-rdi"|trans }}</p>

        <a
            href="{{ path('app_signup', {
                '_redirect': path('app_observateur_externe_join_confirm', {'token': app.request.attributes.get('_route_params').token}),
                'user_email': projetObservateurExterne.invitationEmail,
                'user_telephone': projetObservateurExterne.invitationTelephone,
            }) }}"
            class="mt-1 btn btn-lg btn-success"
        >{{ "create_my_rdi_manager_account"|trans }}</a>

        <p class="mt-4">{{ "also-an-account"|trans }}</p>

        <a
            href="{{ path('app_observateur_externe_join_confirm', {'token': app.request.attributes.get('_route_params').token}) }}"
            class="mt-1 btn btn-outline-primary"
        >{{ "i_already_have_a_rdi_manager_account"|trans }}</a>
    </div>
</div>

{% endblock %}
