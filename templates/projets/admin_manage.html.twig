{% extends "base.html.twig" %}

{% block title %}{{ "projectString"|trans }} {{ projet.acronyme }} | {{ parent() }}{% endblock %}

{% block body %}

    {% include('utils/_btn_html_to_pdf.html.twig') %}

    <div id="containerHtmlToPdf">

        <h1>
            {{ "STATISTIQUES"|trans }}
        </h1>

        <h3 class="text-center">
            <small class="text-muted">{{ "SOCIETE_CDP"|trans }} : {{ projet.chefDeProjet|entityLink }}</small>
        </h3>

        <a class="d-block mb-4 not-printable" href="{{ path('app_fo_projet', {id: projet.id}) }}">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
            {{ 'go_on_project'|trans }}
        </a>

        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="card-deck mb-4">
                    <div class="card rdi-card-icon text-center">
                        <i class="fa fa-users" aria-hidden="true"></i>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-9 offset-3 col-sm-12 offset-sm-0">
                                    <h5 class="card-title"><a
                                                href="{{ path('app_fo_projet_participant', {'id': projet.id}) }}">{{ "quota.contributeurs.name"|trans }}</a>
                                    </h5>
                                    <p class="card-text display-4 mb-0">
                                        {{ projet.projetParticipants|filterByRoleExactly(constant('App\\Security\\Role\\RoleProjet::CONTRIBUTEUR'))|length + projet.projetParticipants|filterByRoleExactly(constant('App\\Security\\Role\\RoleProjet::CDP'))|length }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rdi-card-icon text-center">
                        <i class="fa fa-road" aria-hidden="true"></i>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-9 offset-3 col-sm-12 offset-sm-0">
                                    <h5 class="card-title"><a href="{{ path('app_fo_projet', {'id': projet.id}) }}">{{ "FAITS_MARQUANTS"|trans }}</a></h5>
                                    <p class="card-text display-4 mb-0">
                                        {{ projet.faitMarquants|length }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if projet.annualRdiScores %}
                        <div class="card rdi-card-icon text-center">
                            <i class="fa fa-flask" aria-hidden="true"></i>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-9 offset-3 col-sm-12 offset-sm-0">
                                        <h5 class="card-title" style="color: #007bff;">Score RDI
                                            <span
                                                    class="year-switch text-center"
                                                    data-event-name="projet-score-rdi-year-changed"
                                                    data-annual-rdi-scores="{{ projet.annualRdiScores|json_encode() }}"
                                                    data-year-from="{{ projet.annualRdiScores | keys | first }}"
                                                    data-year-to="{{ projet.annualRdiScores | keys | last }}"
                                            ></span>
                                        </h5>
                                        <h6 class="card-subtitle mb-2 deck text-muted">éligibilité RDI évaluée par
                                            l'algorithme RDI-Manager</h6>
                                        <p class="card-text display-4 mb-0">
                                            <span class="rdi-percent text-success">
                                                <span class="rdi-value"></span><sup>/ 100</sup>
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div id="projet-budget-charts" data-projet-id="{{ projet.id }}" class="my-4">
                    <div class="w-100">
                        <h2>{{ 'budget_analysis'|trans }}</h2>
                    </div>
                    <div class="row charts">
                        <div class="col-sm-12 col-md-6 d-flex flex-column justify-content-between">
                            <h4 class="text-center">en Heure (H)</h4>
                            <div id="hour-budget"></div>
                        </div>
                        <div class="col-sm-12 col-md-6 d-flex flex-column justify-content-between">
                            <h4 class="text-center d-flex justify-content-between align-items-center">
                                <div></div>
                                <span>en Euro (&euro;)</span>
                                <a class="btn btn-success btn-sm btn-add-expenses not-printable" title="Ajouter des dépenses spéciales (DS)" href="javascript:;"><i class="fa fa-plus"></i></a>
                            </h4>
                            <div id="euro-budget"></div>
                        </div>
                    </div>
                </div>

                {% if projet.projetPlanning %}
                    <div id="projet-stats-charts" class="row my-4">
                        <div class="col-sm-12">
                            <h2>{{ 'kpis_indicators'|trans }}</h2>
                        </div>
                        <div class="row col-sm-12 d-md-flex flex-row justify-content-around align-items-center">
                            <div class="col-md-4 col-sm-12">
                                <h4 class="text-center">{{ 'efficiency'|trans }}</h4>
                                <canvas id="efficacite" data-efficacite="{{ projet.projetPlanning.efficacite }}"></canvas>
                            </div>
                            <div class="col-md-4 col-sm-12">
                                <h4 class="text-center">{{ 'effectiveness'|trans }}</h4>
                                <canvas id="effectivite" data-effectivite="{{ projet.projetPlanning.effectivite }}"></canvas>
                            </div>
                        </div>
                    </div>
                {% endif %}

                <div class="row my-4">
                    <div class="col-md-12 mx-auto bordure">
                        <h2>
                            <span
                                    class="year-switch text-center"
                                    data-event-name="projet-chart-year-changed"
                                    {% if projet.dateDebut %}
                                        data-year-from="{{ projet.dateDebut|date('Y') }}"
                                    {% endif %}
                                    data-with-unit="temps-unit-switch"
                            ></span>
                            {{ 'time_spent_in'|trans }}
                            <span
                                    class="temps-unit-switch"
                                    data-event-name="projet-chart-year-changed"
                            ></span>
                        </h2>
                    </div>
                </div>

                <div id="chart-projet-users-temps" data-projet-id="{{ projet.id }}"></div>

            </div>
        </div>
    </div>

    <div class="modal fade" id="specialExpenses" tabindex="-1" role="dialog" aria-labelledby="specialExpensesLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="specialExpensesLabel">Dépenses spéciales</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="specialExpensesForm" name="special_expense_form">
                        <div class="row">
                            <div class="col-lg-8">
                                <label>Dépense</label>
                                <div class="form-group">
                                    <input type="text" name="special_expense_form[titre]" class="form-control w-100"/>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <label>Montant</label>
                                <div class="form-group">
                                    <input type="text" name="special_expense_form[amount]" class="form-control w-100"/>
                                </div>
                            </div>
                            <input type="hidden" name="special_expense_form[updateId]">
                        </div>
                        <div class="d-flex flex-row justify-content-end align-items-center">
                            <button type="submit" class="btn btn-success">{{ 'save'|trans }}</button>
                        </div>
                    </form>
                    <div class="col-lg-12 my-3 pt-3 list-special-expenses" style="border-top: 1px solid lightgrey;">
                        <table class="w-100 font-weight-bold">
                            <tbody>
                                {% for expense in projet.projetBudgetExpenses %}
                                    <tr data-expense-id="{{ expense.id }}">
                                        <td class="expense-titre">{{ expense.titre }}</td>
                                        <td class="expense-amount">{{ expense.amount }}</td>
                                        <td>
                                            <a href="javascript:;" class="text-warning btn-edit-expense"><i class="fa fa-pencil"></i></a>
                                            <a href="javascript:;" class="text-danger btn-delete-expense"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
