{% extends "base.html.twig" %}

{% block title %}{{ "projectString"|trans }} {{ projet.acronyme }} | {{ parent() }}{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12 col-md-8">
        <h1>
            {% include 'utils/_code_color.html.twig' with {color: projet.colorCode} %}
            {{ "projectString"|trans }} {{ projet.acronyme }}
        </h1>

        <p class="lead text-center">{{ projet.titre }}</p>

        {% if projet.rdiDomains | length > 0 %}
            <p class="text-center">
                {% for rdiDomain in projet.rdiDomains %}
                    <span class="badge badge-info">{{ rdiDomain.nom }}</span>
                {% endfor %}
            </p>
        {% endif %}

        <p class="text-center">
            {{ 'PROJET_CDP'|trans }} :
            {% include 'utils/_avatar.html.twig' with {user: projet.chefDeProjet.user, size: 28, toExpend: true} %}
            {{ projet.chefDeProjet|entityLink }}
        </p>

        <p class="text-center">
            {% if projet.projetCollaboratif %}
                <span class="badge badge-success">{{ "collaboratif"|trans }}</span>
            {% endif %}
            {% if projet.projetInterne %}
                <span class="badge badge-success">{{ "interne"|trans }}</span>
            {% endif %}
            {% if projet.projetPpp %}
                <span class="badge badge-success">PPP - R&amp;D</span>
            {% endif %}
            {% include 'projets/_eligible_rdi.html.twig' with {projet: projet} %}
        </p>
    </div>
    <div class="col-12 col-md-4">
        <div class="projet-actions">
            <a
                href="{{ path('app_fo_projet_modifier', {'id': projet.id}) }}"
                class="btn btn-outline-primary rounded-circle {{ userCanEditProjet ? '' : 'disabled' }}"
                title="Paramétrage du projet {{ userCanEditProjet ? '' : '(Pas d\'accès)' }}"
            ><i class="fa fa-cog"></i></a>
            <a
                href="{{ path('app_fo_projet_planning', {'projetId': projet.id}) }}"
                class="btn btn-outline-primary rounded-circle"
                title="Planification du projet"
            ><i class="fa fa-tasks"></i></a>
            <a
                href="{{ path('app_fo_projet_evenements', {'id': projet.id}) }}"
                class="btn btn-outline-primary rounded-circle"
                title="Calendrier des événements"
            ><i class="fa fa-calendar"></i></a>
            <a
                href="{{ path('app_fo_admin_projet', {'id': projet.id}) }}"
                class="btn btn-outline-primary rounded-circle {{ userCanEditProjet ? '' : 'disabled' }}"
                title="Statistiques du projet {{ userCanEditProjet ? '' : '(Pas d\'accès)' }}"
            ><i class="fa fa-bar-chart"></i></a>
            <div class="dropdown">
                <a href="javascript:;" class="btn btn-outline-primary rounded-circle" id="dropdownOtherMenuButton" data-toggle="dropdown">
                    <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownOtherMenuButton">
                    <a class="dropdown-item m-0 " href="{{ path('app_fo_projet_activity', { 'id' : projet.id }) }}"><i class="fa fa-rss"></i> Activité du projet</a>
                    <a class="dropdown-item m-0 " href="{{ path('app_fo_projet_custom', { 'id' : projet.id }) }}"><i class="fa fa-download"></i> Exporter le projet</a>
                    <a class="dropdown-item m-0 {{ userCanEditProjet ? '' : 'disabled' }}" href="{{ path('app_fo_fait_marquant_trash', { 'id' : projet.id }) }}"><i class="fa fa-trash"></i> {{ 'beenOf_FM'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-8">
        {% include 'projets/fiche_projet-main.html.twig' %}
    </div>
    <aside class="col-12 col-md-4 d-none d-md-block">
        {% include 'projets/fiche_projet-sidebar.html.twig' %}
    </aside>
</div>

<div class="modal fade" id="observateursModal" tabindex="-1" aria-labelledby="observateursModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="observateursModalLabel">{{ 'n_observateur'|trans({'%n%': projet.projetParticipants|filterByRoleExactly(constant('App\\Security\\Role\\RoleProjet::OBSERVATEUR'))|length}) }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow-y: scroll;height: 250px;">
                <ul>
                    {% for projetParticipant in projet.activeProjetParticipants|filterByRoleExactly(constant('App\\Security\\Role\\RoleProjet::OBSERVATEUR')) %}
                        {% if projetParticipant.societeUser.invitationToken == null %}
                            <li>{{ projetParticipant.societeUser.user.fullname }} </li>
                        {% endif %}
                    {% endfor %}

                    {% for projetObservateurExterne in projet.projetObservateurExternes %}
                        {% if projetObservateurExterne.user is not null %}
                            <li><strong>{{ "externe"|trans }}</strong> : {{ projetObservateurExterne.user.fullname }} </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="contributeurModal" tabindex="-1" aria-labelledby="contributeurModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contributeurModalLabel">{{ 'n_contributeur'|trans({'%n%': projet.projetParticipants|filterByRoleExactly(constant('App\\Security\\Role\\RoleProjet::CONTRIBUTEUR'))|length}) }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="overflow-y: scroll;height: 250px;">
                <ul>
                    {% for projetParticipant in projet.activeProjetParticipants|filterByRoleExactly(constant('App\\Security\\Role\\RoleProjet::CONTRIBUTEUR')) %}
                        {% if projetParticipant.societeUser.invitationToken == null %}
                            <li>{{ projetParticipant.societeUser.user.fullname }} </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ "close"|trans }}</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fiche-projet') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fiche-projet') }}
{% endblock %}